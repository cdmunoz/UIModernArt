<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".ModernArtActivity"
                android:background="@android:color/black">

    <RelativeLayout
        android:id="@+id/gridV"
        android:layout_width="fill_parent"
        android:layout_height="455dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible">

        <View
            android:background="@color/weird_green"
            android:tag="@color/weird_green"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="130dip"
            android:layout_height="220dip"
            android:id="@+id/view1"
            android:paddingLeft="@dimen/view_horizontal_margin"
            android:paddingRight="@dimen/view_horizontal_margin"
            android:paddingTop="@dimen/view_vertical_margin"
            android:paddingBottom="@dimen/view_vertical_margin">
        </View>

        <View
            android:background="@color/weird_blue"
            android:tag="@color/weird_blue"
            android:layout_width="130dip"
            android:layout_height="fill_parent"
            android:id="@+id/view2"
            android:layout_below="@+id/view1"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/view1"
            android:paddingLeft="@dimen/view_horizontal_margin"
            android:paddingRight="@dimen/view_horizontal_margin"
            android:paddingTop="@dimen/view_vertical_margin"
            android:paddingBottom="@dimen/view_vertical_margin">
        </View>

        <View
            android:background="@color/weird_dark_gray"
            android:tag="@color/weird_dark_gray"
            android:layout_width="fill_parent"
            android:layout_height="160dip"
            android:id="@+id/view3"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/view1"
            android:paddingLeft="@dimen/view_horizontal_margin"
            android:paddingRight="@dimen/view_horizontal_margin"
            android:paddingTop="@dimen/view_vertical_margin"
            android:paddingBottom="@dimen/view_vertical_margin">
        </View>

        <View
            android:background="@color/light_gray"
            android:tag="@color/light_gray"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view4"
            android:layout_below="@+id/view3"
            android:layout_toEndOf="@+id/view1"
            android:paddingLeft="@dimen/view_horizontal_margin"
            android:paddingRight="@dimen/view_horizontal_margin"
            android:paddingTop="@dimen/view_vertical_margin"
            android:paddingBottom="@dimen/view_vertical_margin">
        </View>

        <View
            android:background="@color/weird_red"
            android:tag="@color/weird_red"
            android:layout_width="fill_parent"
            android:layout_height="160dip"
            android:id="@+id/view5"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/view2"
            android:paddingLeft="@dimen/view_horizontal_margin"
            android:paddingRight="@dimen/view_horizontal_margin"
            android:paddingTop="@dimen/view_vertical_margin"
            android:paddingBottom="@dimen/view_vertical_margin">
        </View>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignEnd="@id/gridV"
        android:id="@+id/componentSeekBar">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

</LinearLayout>
